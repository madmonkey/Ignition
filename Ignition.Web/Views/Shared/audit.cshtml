                <td class="text-success">{{rec.NewValue}}</td> 
                <td class="text-info">{{rec.UpdateDate}}</td>
            </tr>*@
        </table>
        <button onclick="window.location.href='/audit?pg=7'">Search</button>
    </form>
</div>
